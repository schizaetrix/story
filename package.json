{
  "name": "story",
  "version": "1.0.0",
  "description": "storyTree: Choose Your Own Email Adventure",
  "main": "index.js",
  "engines": {
    "node": "8.1.1",
    "npm": "5.0.3"
  },
  "scripts": {
    "start": "node index.js",
    "server": "nodemon index.js",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run webhook\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "webhook": "ssh -R story-tree-app:80:localhost:5000 serveo.net"
  },
  "author": "Chiza Barber",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "cookie-session": "^1.3.3",
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "mjml": "^4.4.0-beta.1",
    "mongoose": "^5.4.19",
    "nodemon": "^1.18.10",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^2.0.0",
    "path-parser": "^4.2.0",
    "sendgrid": "^5.2.3",
    "stripe": "^6.28.0"
  }
}
